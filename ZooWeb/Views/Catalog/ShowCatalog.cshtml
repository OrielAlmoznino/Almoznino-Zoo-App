@model IEnumerable<ZooDAL.Entities.Animal>

@{
    ViewData["Title"] = "Catalog";
}
<link href="~/css/cardextension.css" rel="stylesheet" />
<div class="container">
    <h1 class="row justify-content-center">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Filter by Category:</h5>
                    <form id="filterForm" asp-action="FilterByCategory" method="get">
                         <select name="categoryId" class="form-select" asp-items="@ViewBag.Categories" onchange="this.form.submit()">
                         <option value="">All Categories</option>
                         </select>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row mt-4">
        @foreach (var item in Model)
        {
           <div class="col-sm-6 col-md-3 custom-card">
          <div class="card mb-4 shadow">
        <img src="~/Images/@item.ImagePath" class="card-img-top" alt="Animal Image">
        <div class="card-body">
            <h5 class="card-title text-center">@item.Name</h5>
            <p class="card-text text-center">Age: @item.Age</p>
            <div class="text-center">
                <a href="@Url.Action("Details", "Catalog", new { id = item.Id })" class="btn btn-primary">Details</a>
            </div>
        </div>
    </div>
</div>
        }
    </div>
</div>
